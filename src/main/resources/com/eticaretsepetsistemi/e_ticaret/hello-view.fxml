<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.eticaretsepetsistemi.e_ticaret.Controller.HelloController">

    <!-- Üst Kısım - Başlık ve Menü -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="E-Ticaret Mağazası" textFill="white" />
            <Button style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Ana Sayfa" />
            <Button style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Kategoriler" />
            <Button style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Hesabım" />
            <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Sepetim" />
         <Button onAction="#Urun_ekle" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Ürün Ekle" />
        </HBox>
    </top>

    <!-- Orta Kısım - Ürünler ve Sepet -->
    <center>
        <SplitPane dividerPositions="0.7">
            <!-- Ürün Listesi -->
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ürünler" />

                <TableView fx:id="urunTablosu" prefHeight="300" prefWidth="600">
                    <columns>
                        <TableColumn fx:id="urunAdiColumn" text="Ürün Adı" prefWidth="150"/>
                        <TableColumn fx:id="fiyatColumn" text="Fiyat" prefWidth="100"/>
                        <TableColumn fx:id="stokColumn" text="Stok" prefWidth="100"/>
                        <TableColumn fx:id="kategoriColumn" text="Kategori" prefWidth="150"/>
                    </columns>
                </TableView>


                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label text="Toplam Ürün:" />
                    <Label fx:id="toplamUrunLabel" style="-fx-font-weight: bold;" text="0" />
                </HBox>
            </VBox>

            <!-- Sepet Özeti -->
            <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sepet Özeti" />

                <ListView fx:id="sepetListesi" style="-fx-background-color: white; -fx-border-color: #ddd;" />

                <VBox spacing="5">
                    <HBox>
                        <Label style="-fx-font-weight: bold;" text="Ara Toplam:" />
                        <Label fx:id="araToplamLabel" style="-fx-font-weight: bold;" text="0.00 TL" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox>
                        <Label text="KDV (%18):" />
                        <Label fx:id="kdvLabel" text="0.00 TL" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Toplam:" />
                        <Label fx:id="genelToplamLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="0.00 TL" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <Button style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;" text="Sepeti Onayla" />
                <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 200;" text="Sepeti Temizle" />
            </VBox>
        </SplitPane>
    </center>

    <!-- Alt Kısım - Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="30" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="© 2023 E-Ticaret Sepet Sistemi" textFill="white" />
            <Label text="Kullanım Koşulları" textFill="#3498db" />
            <Label text="Gizlilik Politikası" textFill="#3498db" />
            <Label text="İletişim" textFill="#3498db" />
        </HBox>
    </bottom>
</BorderPane>
